    $(SSTMACEXEC) -f $(srcdir)/test_configs/test_stats_$@.ini --low-res-timer --no-wall-time  

bytes_sent_fattree: 
	$(PYRUNTEST) 5 $(top_srcdir) test_stats_$@.$(CHKSUF) True \
