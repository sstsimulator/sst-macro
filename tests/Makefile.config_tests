test_coverage_%.$(CHKSUF): $(SSTMACEXEC)
	$(PYRUNTEST) 15 $(top_srcdir) $@ True \
    $(SSTMACEXEC) -i mpi_coverage.ini -f $*.ini -i exa_mini_top.ini \
    --no-wall-time 

